#!/bin/sh

CMD="python2.2 ./latex.py"

if [ -z "$1" ] ; then
  FM="*.txt"
else
  FM=$1
fi

for INF in `ls test/$FM` ; do
  OUTF="$INF.tex"
  REFF="$OUTF.ref"
  $CMD $INF > $OUTF
  diff -q -s $REFF $OUTF 
  echo --------------------------
done
INF=test/tools.txt
OUTF="$INF-ltoc.tex"
REFF="$OUTF.ref"
$CMD --use-latex-toc 1 $INF > $OUTF
diff -q -s $REFF $OUTF 
  echo --------------------------
