% LaTeX Objects Defined by Docutils
% =================================

% Length variables
% ----------------

% width of admonition boxes
\newlength{\admonitionwidth}
\setlength{\admonitionwidth}{0.9\textwidth}

% width for docinfo tablewidth
\newlength{\docinfowidth}
\setlength{\docinfowidth}{0.9\textwidth}

% option list
% -----------

\newcommand{\optionlistlabel}[1]{\bf #1 \hfill}
\newenvironment{optionlist}[1]
{\begin{list}{}
  {\setlength{\labelwidth}{#1}
   \setlength{\rightmargin}{1cm}
   \setlength{\leftmargin}{\rightmargin}
   \addtolength{\leftmargin}{\labelwidth}
   \addtolength{\leftmargin}{\labelsep}
   \renewcommand{\makelabel}{\optionlistlabel}}
  }%
{\end{list}}

% line block
% ----------

\newlength{\lineblockindentation}
\setlength{\lineblockindentation}{2.5em}
\newenvironment{lineblock}[1]
{\begin{list}{}
  {\setlength{\partopsep}{\parskip}
   \addtolength{\partopsep}{\baselineskip}
   \topsep0pt\itemsep0.15\baselineskip\parsep0pt
   \leftmargin#1}
 \raggedright}
{\end{list}}

% floats for footnotes tweaking 
% -----------------------------
% (cf. --use-latex-footnotes).

\setlength{\floatsep}{0.5em}
\setlength{\textfloatsep}{\fill}
\addtolength{\textfloatsep}{3em}
\renewcommand{\textfraction}{0.5}
\renewcommand{\topfraction}{0.5}
\renewcommand{\bottomfraction}{0.5}
\setcounter{totalnumber}{50}
\setcounter{topnumber}{50}
\setcounter{bottomnumber}{50}

% some more commands for semantic markup
% --------------------------------------

\newcommand{\rubric}[1]
{\subsection*{~\hfill {\it #1} \hfill ~}}
\newcommand{\titlereference}[1]{\textsl{#1}}


% Layout Settings
% ===============

% Page layout with package typearea from koma-script
% --------------------------------------------------

% DIV factor 12 (current docutils default)
\typearea{12}
% Automatic calculation
% \typearea{calc}
% DIV factor 11, binding correction (BCOR) 12 mm:
% \typearea[12mm]{11}

% options for the hyperref package
\hypersetup{colorlinks=true,linkcolor=blue,urlcolor=blue}

% do not indent first line of paragraph.
\setlength{\parindent}{0pt}
\setlength{\parskip}{5pt plus 2pt minus 1pt}

% extra space between text in tables and the line above them
\setlength{\extrarowheight}{2pt}

% Variable or fixed bottom line position
% --------------------------------------
%
% \raggedbottom specifies that the last line of a page should be positioned
% wherever it was calculated. This means that the position of this line can be
% different on each page, up to the height of one line. In double-sided
% documents this is usually unwanted. \flushbottom makes sure that the last
% line is always at the lower edge of the text block.

\raggedbottom
% \flushbottom

% sloppy
% ------
% Less strict (opposite to default fussy) space size between words.
% Results in less hyphenation.
\sloppy

