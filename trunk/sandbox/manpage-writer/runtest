#!/bin/sh

IN_DIR=input
OUT_DIR=output
EXP_DIR=expected

if [ -z "$1" ] ; then
  FILES=*.txt
else
  FILES=$1
fi

CMD="python tools/rst2man.py --traceback"

for IN_F in $IN_DIR/$FILES ; do
  BASE=`basename $IN_F`
  F_BASE=${BASE%.txt}
  $CMD $IN_F $OUT_DIR/$F_BASE.man
  if [ $? -eq 0 ] ; then
    diff -s -u $EXP_DIR/$F_BASE.man $OUT_DIR/$F_BASE.man
    man -Tlatin1 $OUT_DIR/$F_BASE.man > $OUT_DIR/$F_BASE.latin1
    diff -s -u $EXP_DIR/$F_BASE.latin1 $OUT_DIR/$F_BASE.latin1
  fi
done


